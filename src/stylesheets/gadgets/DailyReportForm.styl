.DailyReportForm

  &__row
    display: flex
    +mobile()
      display: block
    & + &
      margin-top: 20px
    &.submit
      max-width: 350px
      height: 70px
      margin: 50px auto 0
      +mobile()
        height: Const.Height.Large
        margin-top: 20px

  &__column
    &:not(.name)
      flex: 1
      & + &
        margin-left: 1.5em
        +mobile()
          margin: 0
    &.name
      flex: 1
      margin: 0 auto

  &__label
    font-weight: bold
    &.required
      &::before
        content: "(*) "
