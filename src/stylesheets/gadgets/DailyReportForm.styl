.DailyReportForm
  FormWidth = 500px

  &
    container()

  &__inner
    padding: 50px 0

  &__heading
    margin-bottom: 20px
    font-size: 1.3rem
    font-weight: bold
    text-align: center

  &__row
    display: flex
    +mobile()
      display: block
    & + &
      margin-top: 20px
    &.submit
      height: Const.Height.Large

  &__column
    &:not(.name)
      flex: 1
      & + &
        margin-left: 1.5em
        +mobile()
          margin: 0
    &.name
      flex: 1
      margin: 0 auto

  &__label
    font-weight: bold
    &.required
      &::before
        content: "(*) "
